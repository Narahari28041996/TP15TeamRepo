package co.cast.generic.BaseClass;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.locators.RelativeLocator;

public class home {
WebDriver driver=null;
	public home(WebDriver driver){
		this.driver=driver;
	}
		//navigate to contact module 
		//driver.findElement(By.linkText("Contacts")).click();
		
		
		@FindBy(name="username")private WebElement un;
		@FindBy(name="user_password") private WebElement pwd;
		@FindBy(id="submitButton")private WebElement submit;
		@FindBy(linkText="Contacts")private WebElement link;
		@FindBy(xpath="//img[@src='themes/softed/images/user.PNG']")private WebElement image;
        @FindBy(linkText="Sign Out")private WebElement out;
		public WebElement getUn() {
			return un;
		}
		public WebElement getPwd() {
			return pwd;
		}
		public WebElement getSubmit() {
			return submit;
		}
		public WebElement getLink() {
			return link;
		}
		public WebElement gotimage() {
			return image;
		}
		public WebElement getout() {
			return out;
		}
		public void logout() {
		try {	Actions action =new Actions(driver);
			action.moveToElement(image).perform();
			out.click();
		}catch(Exception e) {System.out.println("not came");	
		}
	driver.findElement(RelativeLocator.with(By.xpath("//img[@src='themes/softed/images/info.PNG']")).toRightOf(By.xpath("//img[@src='themes/softed/images/user.PNG']"))).click();
	out.click();
		}
		
		
	}


