		String drop1=elib.getDataFromExcel("tc", 1, 1) ;
		on.dropdown(drop1);
			
			orgInfoVerify oi=new orgInfoVerify(driver);
		String  dd=	oi.getdd().getText();
if(dd.contains(drop1)) {
	System.out.println(drop1+"verified ==> pass");
}else {
	System.out.println(drop1+"verified==> fail");
}
        
on.getsave();
			
			
	}
	}
	